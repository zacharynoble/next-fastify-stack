{
    "compilerOptions": {
        "outDir": "dist",
        "target": "esnext",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["./*.js", "./**/*.ts"]
}
